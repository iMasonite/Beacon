#tag WindowCode
	#tag Event
		Sub Opening()
		  Self.SwapButtons()
		End Sub
	#tag EndEvent


	#tag Method, Flags = &h0
		Shared Function Present(Parent As DesktopWindow, Sources() As Ark.LootItemSetEntry) As Ark.LootItemSetEntry()
		  Var Win As New ArkLootEntryMultiEditor
		  Win.Editor.Setup(Sources)
		  Win.ShowModal(Parent.TrueWindow)
		  If Win.mCancelled Then
		    Win.Close
		    Return Nil
		  End If
		  
		  Var MutableEntries() As Ark.MutableLootItemSetEntry
		  MutableEntries.ResizeTo(Sources.LastIndex)
		  For Idx As Integer = 0 To Sources.LastIndex
		    MutableEntries(Idx) = New Ark.MutableLootItemSetEntry(Sources(Idx))
		  Next Idx
		  Win.Editor.ApplyTo(MutableEntries)
		  
		  Var Entries() As Ark.LootItemSetEntry
		  Entries.ResizeTo(MutableEntries.LastIndex)
		  For Idx As Integer = 0 To MutableEntries.LastIndex
		    Entries(Idx) = New Ark.LootItemSetEntry(MutableEntries(Idx))
		  Next Idx
		  
		  Win.Close
		  Return Entries
		End Function
	#tag EndMethod


