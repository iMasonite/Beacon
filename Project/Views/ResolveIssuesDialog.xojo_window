#tag WindowCode
	#tag Event
		Sub Opening()
		  Self.UpdateUI()
		  Self.UpdateDetailLabel()
		End Sub
	#tag EndEvent


	#tag Method, Flags = &h0
		Sub Constructor(Issues As Beacon.ProjectValidationResults)
		  Self.mIssues = Issues
		  Super.Constructor
		End Sub
	#tag EndMethod

	#tag Method, Flags = &h21
		Private Sub UpdateDetailLabel()
		  If Self.IssuesList.SelectedRowCount <> 1 Then
		    Self.DetailLabel.Visible = False
		    Self.IssuesList.Height = Self.ActionButton.Top - (20 + Self.IssuesList.Top)
		    Return
		  End If
		  
		  Self.DetailLabel.Visible = True
		  Self.DetailLabel.Text = Self.IssuesList.CellTextAt(Self.IssuesList.SelectedRowIndex, 0)
		  Self.DetailLabel.Height = Self.DetailLabel.IdealHeight
		  Self.DetailLabel.Top = Self.ActionButton.Top - (20 + Self.DetailLabel.Height)
		  
		  Self.IssuesList.Height = Self.DetailLabel.Top - (12 + Self.IssuesList.Top)
		End Sub
	#tag EndMethod

	#tag Method, Flags = &h21
		Private Sub UpdateUI()
		  Self.IssuesList.RemoveAllRows
		  For Each Issue As Beacon.Issue In Self.mIssues
		    Self.IssuesList.AddRow(Issue.Description)
		    Self.IssuesList.RowTagAt(Self.IssuesList.LastAddedRowIndex) = Issue
		  Next
		  Self.IssuesList.Sort
		End Sub
	#tag EndMethod


	#tag Hook, Flags = &h0
		Event GoToIssue(Issue As Beacon.Issue)
	#tag EndHook


	#tag Property, Flags = &h21
		Private mIssues As Beacon.ProjectValidationResults
	#tag EndProperty


#tag EndWindowCode

#tag Events ActionButton
	#tag Event
		Sub Pressed()
		  Self.Close
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events IssuesList
	#tag Event
		Sub SelectionChanged()
		  Self.GoToButton.Enabled = Me.SelectedRowIndex > -1
		  Self.UpdateDetailLabel()
		End Sub
	#tag EndEvent
	#tag Event
		Function RowComparison(row1 as Integer, row2 as Integer, column as Integer, ByRef result as Integer) As Boolean
		  #Pragma Unused Column
		  
		  Var Issue1 As Beacon.Issue = Me.RowTagAt(Row1)
		  Var Issue2 As Beacon.Issue = Me.RowTagAt(Row2)
		  Result = Issue1.Location.Compare(Issue2.Location, ComparisonOptions.CaseInsensitive)
		  Return True
		End Function
	#tag EndEvent
#tag EndEvents
#tag Events GoToButton
	#tag Event
		Sub Pressed()
		  If Self.IssuesList.SelectedRowIndex = -1 Then
		    Return
		  End If
		  
		  Var Issue As Beacon.Issue = Self.IssuesList.RowTagAt(Self.IssuesList.SelectedRowIndex)
		  RaiseEvent GoToIssue(Issue)
		End Sub
	#tag EndEvent
#tag EndEvents
